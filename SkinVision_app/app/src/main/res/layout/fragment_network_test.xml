<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network Connection Test"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnTestServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Test Server Connection"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnTestChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Test Chat API"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnTestPredict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Test Predict API"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/tvResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click buttons above to test connection"
            android:textSize="14sp"
            android:background="#F0F0F0"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>
